{{template "header.html.tmpl" .}}

<p class="message hidden" id="successMessage">Thank you for registering! We'll see you at the event.</p>

<form id="mnccForm" novalidate>
  <input type="hidden" id="formSlug" name="form_slug" value="{{.Slug}}">
  <input type="hidden" id="recaptchaSiteKey" name="recaptcha_site_key" value="{{.RecaptchaSiteKey}}">

  <label for="name">Name <span aria-label="required">*</span></label>
  <input type="text" id="name" name="name" placeholder="e.g. Emily Oak" required>
  <div id="nameError" class="error hidden">Name is required</div>
    
  <label for="pronouns">Pronouns</label>
  <input type="text" id="pronouns" name="pronouns" placeholder="e.g. fae/faer">
    
  <label for="phoneNumber">Phone Number <span aria-label="required">*</span></label>
  <input type="tel" id="phoneNumber" name="phone_number" placeholder="e.g. 763-867-5309" required data-validation="{{.Fields.phone_number.Validation}}">
  <div id="phoneNumberError" class="error hidden">Phone number is required</div>
  <div id="phoneNumberFormatError" class="error hidden">Phone number must be in the format 612-867-5309</div>
    
  <label for="email">Email <span aria-label="required">*</span></label>
  <input type="email" id="email" name="email" placeholder="e.g. me@emi.ly" required data-validation="{{.Fields.email.Validation}}">
  <div id="emailError" class="error hidden">Email is required</div>
  <div id="emailFormatError" class="error hidden">Email must be in the format test@example.com</div>
    
  <label for="dietaryRestrictions">Dietary Restrictions</label>
  <input type="text" id="dietaryRestrictions" name="dietary_restrictions" placeholder="e.g. Vegan, Gluten Free">
    
  <div>
    <label for="wavier">
      <input type="checkbox" id="waiver" name="waiver_completed" value="1" required>
      I have filled out a MNCC Waiver. (<a href="https://www.mnclimbingcoop.com/open-hours/#waiver-id" target="_blank">Waiver</a>) <span aria-label="required">*</span>
    </label>
    <div id="waiverError" class="error hidden">Filling out the waiver is required</div>
  </div>

  <div>
    <label>
      <input type="checkbox" id="shoes" name="shoes_needed">
      I need climbing shoes.
    </label>
  </div>

  <div id="shoeSizeContainer" class="hidden">
    <label for="shoeSize">What size climbing shoes do you wear? <span aria-label="required">*</span></label>
    <input type="text" id="shoeSize" name="shoe_size">
    <div id="shoeSizeError" class="error hidden">Shoe size is required if you need climbing shoes</div>
  </div>
    
  <div>
    <label>
      <input type="checkbox" id="chalk" name="chalk_needed" value="1">
      I need a chalk bag.
    </label>
  </div>
    
  <button id="submitButton" type="submit">Submit</button>
</form>

<script src="/assets/mncc.js"></script>

{{template "footer.html.tmpl" .}}