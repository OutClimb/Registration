{{template "header.html.tmpl" .}}

<p class="message hidden" id="successMessage">{{.SuccessMessage}}</p>

<form id="fundsForm" novalidate>
  <input type="hidden" id="formSlug" name="form_slug" value="{{.Slug}}">
  <input type="hidden" id="recaptchaSiteKey" name="recaptcha_site_key" value="{{.RecaptchaSiteKey}}">

  <label for="fname">First Name <span aria-hidden="true">*</span></label>
  <input type="text" id="fname" name="fname" placeholder="e.g. Emily" required autocomplete="given-name">
  <div id="fnameError" class="error hidden">First Name is required</div>

  <label for="lname">Last Name <span aria-hidden="true">*</span></label>
  <input type="text" id="lname" name="lname" placeholder="e.g. Oak" required autocomplete="family-name">
  <div id="lnameError" class="error hidden">Last Name is required</div>

  <label for="pronouns">Pronouns</label>
  <input type="text" id="pronouns" name="pronouns" placeholder="e.g. fae/faer" autocorrect="off" autocapitalize="none">

  <label for="email">Email <span aria-hidden="true">*</span></label>
  <input type="email" id="email" name="email" placeholder="e.g. me@emi.ly" required autocomplete="email" data-validation="{{.Fields.email.Validation}}">
  <div id="emailError" class="error hidden">Email is required</div>
  <div id="emailFormatError" class="error hidden">Email must be in the format test@example.com</div>

  <label>I need...</label>
  <label><input type="checkbox" name="need" value="Gear">Gear</label>
  <label><input type="checkbox" name="need" value="Clinic">Climbing Clinic Access</label>
  <label><input type="checkbox" name="need" value="Gym">Climbing Gym Access</label>

  <button id="submitButton" type="submit">Submit</button>

  <p class="hidden" id="errorMessage"></p>
</form>

<script src="/assets/funds.js"></script>

{{template "footer.html.tmpl" .}}